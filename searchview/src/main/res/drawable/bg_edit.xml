<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->

    <padding
        android:left="15dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <size android:height="48dp">

    </size>
    <solid
        android:color="#ffffff" />

    <!-- 边框的颜色和粗细 -->
    <stroke
        android:width="1dp"
        android:color="#ffffff"
        />

    <!-- android:radius 圆角的半径 -->
    <corners
        android:radius="10dp"
        />

</shape>